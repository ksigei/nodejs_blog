<!-- edit.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Edit Blog Post</title>
</head>
<body>
  <h1>Edit Blog Post</h1>
  <form action="/posts/<%= post._id %>/edit" method="POST">
    <input type="text" name="title" value="<%= post.title %>" required>
    <textarea name="content" rows="5" required><%= post.content %></textarea>
    <input type="text" name="author" value="<%= post.author %>" required>
    <input type="text" name="category" value="<%= post.category %>" required>
    <input type="text" name="tags" value="<%= post.tags %>" required>
    <input type="file" name="image" value="<%= post.image %>" required>
    <button type="submit">Save</button>
  </form>
</body>
</html>
